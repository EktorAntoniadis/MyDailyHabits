@page
@model MyDailyHabits.App.Pages.Habits.DeleteModel
@{
    ViewData["Title"] = "Delete Habit";
}

@section AdminSideBar {
    <partial name="Administration/_AdminSidebar" />
}

<h3>Are you sure you want to delete this habit?</h3>
<form method="post" asp-page-handler="Delete">
    <div>
        <input type="hidden" asp-for="DeleteHabit.Id" />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.DeleteHabit.Title</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Model.DeleteHabit.Description</dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Administration/Index" class="btn btn-secondary">Cancel</a>
</form>
