@page
@using MyDailyHabits.Data.Enums
@model MyDailyHabits.Pages.Habits.CreateModel
@{
    ViewData["Title"] = "Add Habit";
}

@section AdminSideBar {
    <partial name="Administration/_AdminSidebar" />
}


<h2>Add a New Habit</h2>

<form method="post" asp-page-handler="AddNewHabit">
    <div class="form-group">
        <label asp-for="AddHabit.Title" class="form-label"></label>
        <input asp-for="AddHabit.Title" class="form-control" />
        <span asp-validation-for="AddHabit.Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddHabit.Description" class="form-label"></label>
        <textarea asp-for="AddHabit.Description" class="form-control"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="AddHabit.StartDate" class="form-label"></label>
        <input asp-for="AddHabit.StartDate" type="date" class="form-control" />
        <span asp-validation-for="AddHabit.StartDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddHabit.EndDate" class="form-label"></label>
        <input asp-for="AddHabit.EndDate" type="date" class="form-control" />
        <span asp-validation-for="AddHabit.EndDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="AddHabit.Frequency" class="form-label"></label>
        <select asp-for="AddHabit.Frequency" asp-items="Html.GetEnumSelectList<Frequency>()" class="form-control"></select>
    </div>

    <div class="form-group">
        <label asp-for="AddHabit.Category" class="form-label"></label>
        <select asp-for="AddHabit.Category" asp-items="Html.GetEnumSelectList<Category>()" class="form-control"></select>
    </div>

    <button type="submit" class="btn btn-primary">Add Habit</button>
    <a class="btn btn-secondary" asp-page="/Habits/Index">Back</a>
</form>
