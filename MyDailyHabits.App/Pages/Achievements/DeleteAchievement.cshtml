@page "{id:int}"
@model MyDailyHabits.App.Pages.Achievements.DeleteAchievementModel
@{
    ViewData["Title"] = "Delete Achievement";
}

@section HabitSideBar {
    <partial name="Shared/_HabitSideBar" />
}

<h3>Are you sure you want to delete this achievement?</h3>
<form method="post" asp-page-handler="Delete">
    <div>
        <input type="hidden" asp-for="DeleteAchievement.UserId" />
        <input type="hidden" asp-for="DeleteAchievement.Id" />
        <dl class="row">
            <dt class="col-sm-2">Title</dt>
            <dd class="col-sm-10">@Model.DeleteAchievement.Title</dd>

            <dt class="col-sm-2">Description:</dt>
            <dd class="col-sm-10">@Model.DeleteAchievement.Description</dd>
        </dl>
    </div>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Administration/Index" class="btn btn-secondary">Cancel</a>
</form>
