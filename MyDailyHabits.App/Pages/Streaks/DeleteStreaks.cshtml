@page "{id:int}"
@model MyDailyHabits.Pages.Streaks.DeleteStreaksModel
@{
    ViewData["Title"] = "Delete Streak";
}

<h2>Delete Streak</h2>

<h4>Are you sure you want to delete this streak?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Habit ID</dt>
        <dd class="col-sm-10">@Model.Streak.HabitId</dd>

        <dt class="col-sm-2">Current Streak</dt>
        <dd class="col-sm-10">@Model.Streak.CurrentStreak</dd>

        <dt class="col-sm-2">Longest Streak</dt>
        <dd class="col-sm-10">@Model.Streak.LongestStreak</dd>

        <dt class="col-sm-2">Last Completed</dt>
        <dd class="col-sm-10">@Model.Streak.LastCompletedDate?.ToShortDateString()</dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Streak.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="/Streaks/Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
