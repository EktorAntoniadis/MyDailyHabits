@page
@using MyDailyHabits.Data.Enums
@model MyDailyHabits.App.Pages.Reminders.AddRemindersModel
@{
    ViewData["Title"] = "Add Reminder";
}

<h2>Add a New Reminder</h2>

<form method="post" asp-page-handler="AddNewReminder">
 <input type="hidden" asp-for="AddReminder.UserId" />

    <div class="form-group mt-3">
        <label asp-for="AddReminder.Time" class="form-label">Time</label>
        <input asp-for="AddReminder.Time" type="time" class="form-control" />
        <span asp-validation-for="AddReminder.Time" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="RepeatDaysStringList" class="form-label">Repeat Days</label>
        <input asp-for="RepeatDaysStringList" type="text" class="form-control" />
        <span asp-validation-for="RepeatDaysStringList" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <label asp-for="SelectedHabitId" class="form-label">Habit</label>
        <select asp-for="SelectedHabitId" asp-items="Model.HabitListItems" class="form-control">
            <option value="">-- Select Habit --</option>
        </select>
        <span asp-validation-for="SelectedHabitId" class="text-danger"></span>
    </div>


    <button type="submit" class="btn btn-primary">Add Reminder</button>
    <a class="btn btn-secondary" asp-page="/Reminders/Index">Back</a>
</form>
