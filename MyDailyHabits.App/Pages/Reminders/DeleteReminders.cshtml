@page "{id:int}"
@model MyDailyHabits.App.Pages.Reminders.DeleteRemindersModel
@{
    ViewData["Title"] = "Delete Reminder";

}


<h3>Are you sure you want to delete this achievement?</h3>
<form method="post" asp-page-handler="Delete">
    <input type="hidden" asp-for="DeleteReminder.UserId" />
    <input type="hidden" asp-for="DeleteReminder.Id" />
    <input type="hidden" asp-for="DeleteReminder.HabitId" />
    <dl class="row">
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.DeleteReminder.Time</dd>

        <dt class="col-sm-2">RepeatDays:</dt>
        <dd class="col-sm-10">@Model.DeleteReminder.RepeatDays</dd>
    </dl>
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Reminder/Index" class="btn btn-secondary">Cancel</a>
</form>
